<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/regexString"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/regexTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="z.B. [a-zA-Z]"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textString"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/textTextBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="z.B. abCdEfg"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flagString"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Spinner

        android:id="@+id/dropdownFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/resultListBox"
        android:layout_width="match_parent"
        android:layout_height="253dp" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="@string/CheckButtonText" />
</LinearLayout>
